<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/generateMealPlanBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/generateMealPlanTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_meal_plan_page_title"
        app:layout_constraintStart_toEndOf="@id/generateMealPlanBackBtn"
        app:layout_constraintTop_toTopOf="@id/generateMealPlanBackBtn"
        app:layout_constraintBottom_toBottomOf="@id/generateMealPlanBackBtn"
        style="@style/EditProfile_PageTitle"
        android:layout_marginStart="16dp"
        />

    <ImageButton
        android:id="@+id/generateMealPlanRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_refresh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>