<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.recipes.view.RecipesFragment">

    <include
        android:id="@+id/recipeFSearchLayout"
        layout="@layout/recipe_action_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        />

    <RadioGroup
        android:id="@+id/recipeFFilterGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipeFSearchLayout"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        >
        <RadioButton
            android:id="@+id/recipeFVegetarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/transparent_color"
            android:text="Vegetarian"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:background="@drawable/recipe_filter_btn_theme"
            />
        <RadioButton
            android:id="@+id/recipeFGlutenFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/transparent_color"
            android:text="Gluten Free"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:background="@drawable/recipe_filter_btn_theme"
            />
        <RadioButton
            android:id="@+id/recipeFVeryHealthy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/transparent_color"
            android:text="Healthy"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:background="@drawable/recipe_filter_btn_theme"
            />
        <RadioButton
            android:id="@+id/recipeFCheep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/transparent_color"
            android:text="Cheep"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:background="@drawable/recipe_filter_btn_theme"
            />
        <RadioButton
            android:id="@+id/recipeFVeryPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/transparent_color"
            android:text="Popular"
            android:padding="4dp"
            android:background="@drawable/recipe_filter_btn_theme"
            />

    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipeFRecipeRecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipeFFilterGroup"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>